@{
    ViewBag.Title = "Contacto";
}
<div class="about">

    <h2>Contáctanos</h2>
    <br />
    <div class="row">
        <div class="col-md-4 col-xs-4 col-lg-4">
            <span class="dot"><i class="fa fa-phone"></i></span>
            <h3 class="phone-number-contact">+52 1 722 999 9999</h3>
        </div>
        <div class="col-md-4 col-xs-4 col-lg-4">
            <span class="dot"><i class="fa fa-envelope-o"></i></span>
            <br />
            <br />
            <address>
                <strong>Soporte:</strong>   <a href="#">soporte@ecommerce.com</a><br />
                <strong>Mercadotecnía:</strong> <a href="#">marketing@ecommerce.com</a>
            </address>
        </div>
        <div class="col-md-4 col-xs-4 col-lg-4">
            <span class="dot"><i class="fa fa-facebook-f"></i></span>
            <h3 class="phone-number-contact">ecommerce batidos</h3>
        </div>
    </div>
    <h2>Envíanos un mensaje</h2>
    <br />
    <div id="form-contact" style="text-align:left;">
        <div class="row">
            <div class="col-sm-6 col-12">
                <div class="form-group">
                    <div id="contactpage_email" class="field">
                        <label for="email" class="control-label">E-mail <em>*</em></label><br>
                        <input type="email" name="contact[email]" id="contact_email" class="text form-control">
                    </div>
                </div>
                <div class="form-group">
                    <div id="contactpage_name" class="field">
                        <label for="contactpage_name" class="control-label">Nombre <em>*</em></label><br>
                        <input type="text" name="contact[name]" id="contact_name" class="text form-control" required>
                    </div>
                </div>
                <div class="form-group">
                    <div id="contactpage_phone" class="field">
                        <label for="contactpage_phone" class="control-label">Teléfono</label><br>
                        <input type="tel" name="contact[phone]" id="contact_phone" class="text form-control">
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-12">
                <div class="form-group">
                    <div id="contactpage_message">
                        <label for="contactpage_message" class="control-label">Mensaje <em>*</em></label><br>
                        <textarea name="contact[message]" id="contact_message" class="text form-control"></textarea>
                    </div>
                </div><div class="form-group">
                    <div style="text-align:right;" class="actions">
                        <input type="submit" value="Enviar" class="button btn btn-success" id="send-message-btn">
                    </div>
                </div>
            </div>
            <div class="col-12" style="text-align: right; margin-right: 2rem;">
                <div class="form-group control-label">
                    <p class="required" style=" font-weight:bold !important;">* Campos obligatorios</p>
                </div>
            </div>
        </div>
    </div>

</div>