@using Microsoft.AspNet.Identity
@using Final_Ecommerce.Models.DAL
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        @Html.ActionLink("Bienvenido(a) " + ((Usuarios)Session["usr"]).username + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
        <span>|</span>
        <a href="javascript:document.getElementById('logoutForm').submit()"> Cerrar sesión</a>
    }
}
else
{
    @Html.ActionLink("Ingresar ", "Login", "Account")<span>|</span>@Html.ActionLink(" Registrarse", "Register", "Usuarios")
}
